<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/offerFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="il.ac.technion.socialmoneyexchange.MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_requestFragment"
            app:destination="@id/requestFragment" />
        <action
            android:id="@+id/action_mainFragment_to_logoFragment"
            app:destination="@id/logoFragment" />
        <action
            android:id="@+id/action_mainFragment_to_newUserFragment"
            app:destination="@id/newUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="il.ac.technion.socialmoneyexchange.SettingsFragment">
        <!--            android:label="fragment_settings"-->
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="il.ac.technion.socialmoneyexchange.LoginFragment"
        tools:layout="@layout/fragment_login" />
    <!--            android:label="fragment_login"-->

    <fragment
        android:id="@+id/userProfilePublicFragment"
        android:name="il.ac.technion.socialmoneyexchange.UserProfilePublicFragment"
        tools:layout="@layout/fragment_user_profile_public" />
    <!--        android:label="fragment_user_profile_public"-->
    <fragment
        android:id="@+id/aboutFragment"
        android:name="il.ac.technion.socialmoneyexchange.AboutFragment"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/requestFragment"
        android:name="il.ac.technion.socialmoneyexchange.RequestFragment"
        tools:layout="@layout/fragment_request" />
    <fragment
        android:id="@+id/newUserFragment"
        android:name="il.ac.technion.socialmoneyexchange.NewUserFragment"
        android:label="NewUserFragment" />
    <fragment
        android:id="@+id/logoFragment"
        android:name="il.ac.technion.socialmoneyexchange.LogoFragment"
        android:label="LogoFragment" />
    <fragment
        android:id="@+id/offerFragment"
        android:name="il.ac.technion.socialmoneyexchange.OfferFragment"
        android:label="OfferFragment" />
